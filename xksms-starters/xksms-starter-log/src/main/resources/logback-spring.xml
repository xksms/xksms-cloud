<configuration>
    <springProperty scope="context" name="logstashHost" source="logstash.host"/>
    <springProperty scope="context" name="logstashPort" source="logstash.port"/>
    <springProperty scope="context" name="appName" source="spring.application.name"/>
    <conversionRule conversionWord="ip" class="com.xksms.log.config.IpConfig"/>


    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %ip [%thread] %-5level %X{traceId} %logger{50} - %msg%n</pattern>
        </encoder>
    </appender>


    <appender name="LOGSTASH" class="net.logstash.logback.appender.LogstashTcpSocketAppender">
        <destination>${logstashHost}:${logstashPort}</destination>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <timestamp/>
            <loggerName/>
            <logLevel/>
            <message/>
            <mdc/>
            <contextName/>
            <globalCustomFields>{"appName":"${appName}"}</globalCustomFields>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="LOGSTASH"/>
    </root>


</configuration>
