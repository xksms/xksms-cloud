<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    <springProperty scope="context" name="APP_NAME" source="spring.application.name"/>

    <appender name="CONSOLE" class="net.logstash.logback.appender.LoggingEventCompositeJsonEncoder">
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <timestamp>
                    <timeZone>Asia/Shanghai</timeZone>
                </timestamp>
                <loggerName/>
                <threadName/>
                <logLevel/>
                <message/>
                <mdc/>
                <contextName/>
                <arguments/>
                <stackTrace/>
                <globalCustomFields>{"appName":"${APP_NAME}"}</globalCustomFields>
            </providers>
        </encoder>
        <target>System.out</target>
    </appender>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>
