<configuration>
    <springProperty scope="context" name="logstashHost" source="logstash.host"/>
    <springProperty scope="context" name="logstashPort" source="logstash.port"/>
    <springProperty scope="context" name="appName" source="spring.application.name"/>
    <conversionRule conversionWord="ip" converterClass="com.xksms.log.config.IpConfig"/>
    <appender name="LOGSTASH" class="net.logstash.logback.appender.LogstashTcpSocketAppender">
        <destination>${logstashHost}:${logstashPort}</destination> <!-- Logstash 地址 -->
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <timestamp/>
            <loggerName/>
            <logLevel/>
            <message/>
            <mdc/>
            <contextName/>
            <globalCustomFields>{"appName":"${appName}"}</globalCustomFields>
        </encoder>
    </appender>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %ip [%thread] %-5level %X{traceId} %logger{50} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="LOGSTASH"/>
        <appender-ref ref="STDOUT"/>
    </root>


    <!-- SkyWalking 通过 JavaAgent 插件注入 traceId/spanId -->
    <conversionRule conversionWord="tid"
                    converterClass="org.apache.skywalking.apm.toolkit.log.logback.v1.x.TraceIdPatternConverter"/>


    <!-- 降低 Spring 噪声 -->
    <logger name="org.springframework" level="WARN"/>
    <logger name="org.apache.ibatis" level="WARN"/>
</configuration>
